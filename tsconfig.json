{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "types": ["node", "jest"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist"
    },  
    "include": ["src", "test"],
    "exclude": ["node_modules"]
  }